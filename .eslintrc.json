{
    "extends": "airbnb-base",
    "plugins": [
        "import"
    ],
    "rules": {
        "comma-dangle": ["error", {
            "arrays": "never",
            "objects": "never",
            "imports": "always",
            "exports": "always",
            "functions": "ignore"
        }],
        "func-names": "off",
        "guard-for-in": "off",
        "import/no-dynamic-require": "off",
        "indent": ["error", 4, { "MemberExpression": 0 }],
        "no-param-reassign": ["error", {
            "props": false
        }],
        "no-restricted-syntax": "off",
        "no-underscore-dangle": "off"
    }
}
